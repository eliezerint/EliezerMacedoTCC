<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAliceBlue"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"

        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_main">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView

            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp"
            android:text="Menu" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="05dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/Cliente"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="15dp"
                android:src="@drawable/ic_perm_id"
                app:elevation="4dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorgrey" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/Pedido"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:src="@drawable/ic_description_black_18dp"
                app:elevation="4dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorgrey"


                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/Exportacao"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="15dp"
                android:src="@drawable/ic_import_export_black_24dp"
                app:elevation="4dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorgrey"


                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/Relatorio"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right|bottom"
                android:layout_margin="15dp"
                android:src="@drawable/ic_car_shopping"
                app:elevation="4dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorgrey"


                />


        </LinearLayout>

</LinearLayout>

    </ScrollView>


</LinearLayout>