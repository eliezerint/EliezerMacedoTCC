<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.grupointegrado.appmetaforadevenda" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".TelaCadastro.CadastroPedidoActivity"
            android:label="@string/title_activity_pedido" >
        </activity>
        <activity
            android:name=".TelaConsulta.ConsultaProdutoActivity"
            android:label="@string/title_activity_produto" >
        </activity>
        <activity
            android:name=".TelaCadastro.CadastroCidadeActivity"
            android:label="@string/title_activity_cadastro_cidade" >
        </activity>
        <activity
            android:name=".TelaCadastro.CadastroPessoaActivity"
            android:label="@string/title_activity_cadastro_pessoa" >
        </activity>
        <activity
            android:name=".TelaConsulta.ConsultaClienteActivity"
            android:label="@string/title_activity_consulta_cliente" >
        </activity>
        <activity
            android:name=".TelaConsulta.ConsultaCidadeActivity"
            android:windowSoftInputMode="adjustPan|adjustNothing"
            android:label="@string/title_activity_consulta__cidade"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".TelaCadastro.CadastroTelefoneActivity"
            android:label="@string/title_activity_telefone" >
        </activity>

    </application>

</manifest>
